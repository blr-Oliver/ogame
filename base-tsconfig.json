{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": false,
    "forceConsistentCasingInFileNames": true,
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noPropertyAccessFromIndexSignature": true,
    "outDir": "dist",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "types": [
      "node"
    ],
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "es2019",
      "es2020",
      "es2021"
    ]
  },
  "include": [
    "./common/*"
  ]
}
